---
  const titulo: string = Astro.props.titulo
  const valor:number = Astro.props.dato || 0
---
<article class="content-card">
  <dl class="card-info">
    <dt class="cardLabel">{titulo}</dt>
    <dd class="cardValue">{valor}</dd>
  </dl>
</article>

<style>
  @property --gradient-angle {
    syntax: "<angle>";
    initial-value: 0deg;
    inherits: false;
  }

  .content-card {
    width: 100%;
    height: 100%;
    background: linear-gradient( var(--gradient-angle),#fff1, #fff7,#fff1);
    padding: 0.05rem;
    border-radius: 1rem;
    animation: rotate 7s linear infinite;
  }

  .card-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem;
    background-color: var(--color-morado-claro);
    border-radius:1rem;
    transition: background-color 0.3s ease-in;

    & > .cardValue {
      width: 100%;
      font-size: 5rem;
      text-align: center;
      font-family:monospace;
      font-weight: bold;
      order:-1;

      @media (width <= 768px){
        font-size: 4rem;
      }
    }

    & > .cardLabel {
      width: 100%;
      opacity: 0.8;
      text-align: center;
      font-weight:bold;
      font-size:1.2rem
    }

    &:hover {
      background-color: var(--color-morado-hover);
      /* transition: background-color 0.3s ease-in-out; */
    }
  }

  @keyframes rotate {
    from { --gradient-angle: 0deg;}
    to { --gradient-angle: 360deg;}
  }

</style>