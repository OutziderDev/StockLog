<article>
  <h2>Graficos de Movimientos del Inventario</h2>
  <canvas id="myChart"></canvas>
</article>

<style>
  article {
    width: 100%;
    padding: 1rem;
    background-color: var(--color-morado-claro);

    & > canvas {
      width: 100%;
      height: 50dvh;
    }
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script type="module">
    

  const ctx = document.getElementById('myChart');

  if (ctx) {

    new Chart(ctx, {
      type: 'bar',
      data: {
        labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
        datasets: [{
          label: '# of Votes',
          data: [12, 19, 3, 5, 2, 3],
          borderWidth: 2
        }]
      },
      options: {
        scales: {
          y: {
            beginAtZero: true
          }
        }
      }
    });
  }  
</script>