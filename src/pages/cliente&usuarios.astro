---
import AddClientIcon from '@/assets/icons/addclients.svg'
import AddIcon from '@/assets/icons/add.svg'
import Layout from '@/layouts/Layout.astro'
import ClientesComponent from "@/components/Clientes&Usuarios/Cliente/ClientesComponent"
import UsuariosComponent from "@/components/Clientes&Usuarios/Usuarios/UsuariosComponent"
---
<Layout >
  <section class="container">
    <header class="section-Header">
      <h1 class="tittle">Panel de Usuarios y Clientes</h1>
      <div class="btngruop">
        <button class="" id="addCliente" aria-label="Agregar Clientes" popovertarget="addClientePopover" popovertargetaction="toggle"> <AddClientIcon/> Agregar Cliente</button>
        <button class="" id="addUsuario" aria-label="Agregar Usuario"> <AddIcon/> Agregar Usuario</button>
      </div>
    </header>

    <div class="gridlayout">
      <section>
        <h2>
          Tabla de Clientes Registrados
        </h2>
        
        <ClientesComponent client:load />
        
      </section>

      <section>
        <h2>Tabla de Usuarios del Sistema</h2>
        <UsuariosComponent client:load/>
      </section>
    </div>

    <section id="addClientePopover" popover>
      <header>
        <h2>Agrega un nuevo cliente</h2>
      </header>
      <form action="">
        <label > 
          Nombre:
          <input type="text" name="" id="" class="inputbase">
        </label>
        <label >
          Email:
          <input type="text" name="" id="" class="inputbase">
        </label>
        <label >
          Direcci√≥n
          <input type="text" name="" id="" class="inputbase">
        </label>
        <button>Registrar</button>
      </form>
    </section>

  </section>
</Layout>

<style>
  .btngruop {
    display: flex;
    flex-direction: row;
    gap: 0.3rem;

    button {
      transition: transform 0.1s ease;

      &:active {
        transform: scale(0.9);
      }
    }
  }

  .gridlayout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem; 

    & > section {
      padding: 1.5rem 0.8rem 0.8rem 0.8rem;
      position: relative;
      border: thin solid var(--color-naranja-claro);
      border-radius: 0.3rem;

      & > h2 {
        text-align: center;
        position: absolute;
        text-wrap: nowrap;
        top: 0;
        left: 50%;
        padding-inline: 1rem;
        transform: translate(-50%, -55%);
        background-color: var(--color-morado-oscuro);

        @media ( width <= 1024px){
          font-size: 1rem;
        }
      }

      form {
        display: flex;
        align-items: center;
        flex-direction: row;

        & > label {
          font-size: 1.3rem;
          margin-right: 0.8rem;
          text-wrap: nowrap;
        }

        & > input[type="text"]{
          width: 100%;
        }

        @media( max-width : 1024px){
          flex-direction: column;
        }
      }

      table{
        padding-top: 1rem;
      }
    }

    @media (max-width : 768px){
      grid-template-columns: 1fr;
    }
  }

  [popover] {
    margin: auto;
    padding: 2rem;
    background-color: var(--color-morado-claro);
    border: thick dotted var(--color-naranja-claro);
    color: var(--color-crema);

    &::backdrop {
      background-color: rgb(0, 0, 0, 0.3);
      backdrop-filter: blur(3px);
    }

    & > header {
      font-size: 1.6rem;
      text-align: center;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--color-naranja-claro);
    }

    & > form {
      margin-top: 1rem;
      display: flex;
      flex-direction: column;
      gap: 1rem;

      & > label {
        font-size: 1.3rem;
        font-weight: bolder;

        & > input[type="text"] {
          margin-top: 0.3rem;
          width: 100%;
          background-color: #fff4;
        }
      }

      & > button {
        padding: 0.5rem;
        font-weight: bold;
        font-size: 1rem;
        color: var(--color-morado-oscuro);
        background-color: var(--color-naranja-claro);
        cursor: pointer;
        transition: transform 0.2s ease;

        &:active {
          transform: scale(0.9);
        }
      }
    }
  }

</style>