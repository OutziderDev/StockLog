---
import AddClientIcon from '@/assets/icons/addclients.svg'
import AddIcon from '@/assets/icons/add.svg'
import Layout from '@/layouts/Layout.astro'
import ClientesComponent from "@/components/Clientes&Usuarios/Cliente/ClientesComponent"
import UsuariosComponent from "@/components/Clientes&Usuarios/Usuarios/UsuariosComponent"
import PopoverAddCliente from '@/components/Clientes&Usuarios/Cliente/PopoverAddCliente'
---
<Layout >
  <section class="container">
    <header class="section-Header">
      <h1 class="tittle">Panel de Usuarios y Clientes</h1>
      <div class="btngruop">
        <button class="" id="addCliente" aria-label="Agregar Clientes" popovertarget="addClientePopover" popovertargetaction="toggle"> <AddClientIcon/> Agregar Cliente</button>
        <button class="" id="addUsuario" aria-label="Agregar Usuario"> <AddIcon/> Agregar Usuario</button>
      </div>
    </header>

    <div class="gridlayout">
      <section>
        <h2>
          Tabla de Clientes Registrados
        </h2>
        
        <ClientesComponent client:load />
        
      </section>

      <section>
        <h2>Tabla de Usuarios del Sistema</h2>
        <UsuariosComponent client:load/>
      </section>
    </div>

    <PopoverAddCliente client:load />

  </section>
</Layout>

<style>
  .btngruop {
    display: flex;
    flex-direction: row;
    gap: 0.3rem;

    button {
      transition: transform 0.1s ease;

      &:active {
        transform: scale(0.9);
      }
    }
  }

  .gridlayout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem; 

    & > section {
      padding: 1.5rem 0.8rem 0.8rem 0.8rem;
      position: relative;
      border: thin solid var(--color-naranja-claro);
      border-radius: 0.3rem;

      & > h2 {
        text-align: center;
        position: absolute;
        text-wrap: nowrap;
        top: 0;
        left: 50%;
        padding-inline: 1rem;
        transform: translate(-50%, -55%);
        background-color: var(--color-morado-oscuro);

        @media ( max-width: 1024px){
          font-size: 1rem;
        }
      }

      form {
        display: flex;
        align-items: center;
        flex-direction: row;

        & > label {
          font-size: 1.3rem;
          margin-right: 0.8rem;
          text-wrap: nowrap;
        }

        & > input[type="text"]{
          width: 100%;
        }

        @media( max-width : 1024px){
          flex-direction: column;
        }
      }

      table{
        padding-top: 1rem;
      }
    }

    @media (max-width : 768px){
      grid-template-columns: 1fr;
    }
  }

</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const btnPopoverAddUsuarios = document.querySelector("#addUsuario") 
    const popoverUsuarios = document.querySelector('#addUsuarioPopover') as HTMLElement

    btnPopoverAddUsuarios?.addEventListener('click', () => {
      popoverUsuarios?.showPopover();
    })
  })  
</script>