---
  import ChartWeekActivity from '../components/ChartWeekActivity.astro';
  import InfoCard from '../components/InfoCard.astro';
  import ResumenActivity from '../components/ResumenActivity.astro';
  import Layout from '../layouts/Layout.astro';
---
<Layout>
  <section class="container">
     
    <section class="infocards">
      <h3>Datos m√°s recientes</h3>
      <InfoCard titulo="Reportes en Agosto" dato="703"/>
      <InfoCard titulo="Facturaciones en Agosto" dato="113"/>
      <InfoCard titulo="Rubros en Inventario" dato="1203"/>
      <InfoCard titulo="Usuarios" dato="11"/>
    </section>

    <section class="resumen-activity">
      <ResumenActivity/>
      <ChartWeekActivity />
    </section>
  </section>
</Layout>

<style>
  .container{
    padding: 2.5rem;

    @media (width <= 1024px){
      padding: 2rem;
    }
  }

  .infocards {
    width: 100%;
    display:flex;
    flex-direction: row;
     justify-content: space-around;
    gap: 1rem;

    & > h3 {
      
    }

    @media (width < 1024px){
      flex-direction:column;
      justify-content: center;
    }
  }

  .resumen-activity{
    width: 100%;
    display: flex;
    flex-direction: row;
    gap: 1rem;
    margin-top: 1rem;

    @media (width < 1024px){
      flex-direction: column;
      justify-content: center;
    }
  }

</style>