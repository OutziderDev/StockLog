<style>
  header {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    @media ( width <= 768px){
      flex-direction: column;
      gap: 1rem;
    }

    & > h1 {
      font-size: 1.8rem;
      text-wrap: nowrap;
    }

    & > button {
      display: flex;
      align-items: center;
      gap:0.5rem;
      background-color: var(--color-naranja-oscuro);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      cursor: pointer;
      font-size: 1rem;
      transition: background-color 0.3s ease;

      &:hover {
        background-color: var(--color-naranja-claro);
      }

      & > svg {
        stroke: var(--color-morado-oscuro);
        stroke-width: 3;
      }
    }
  }

