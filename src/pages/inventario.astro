---
import Layout from '@/layouts/Layout.astro'
import LupaIcon from '@/assets/icons/lupa.svg'
---

<Layout >
  <section class="container">
    <header>
      <h1 class="tittle">Inventario de Materiales</h1>
      <button class="add"> <span>+</span> Agregar Producto</button>
    </header>
    <section>
      <h3 class="sr-only">Panel de Filtros</h3>
      <form action="" >
        <input type="text" class="inputbase" placeholder="Buscar Producto..." />
        <select name="categoria" class="inputbase" id="categoria">
          <option value="" disabled selected>-- Categoria --</option>
          <option value="herramientas">Herramientas</option>
          <option value="materiales">Materiales</option>
          <option value="maquinaria">Maquinaria</option>
        </select>
        <select name="ubicacion" class="inputbase" id="ubicacion">
          <option value="" disabled selected>-- Ubicacion --</option>
          <option value="bodega1">Bodega 1</option>
          <option value="bodega2">Bodega 2</option>
          <option value="bodega3">Bodega 3</option>
        </select>
        <button type="submit"> <LupaIcon/> Filtrar</button>
      </form>
    </section>
    <table>

    </table>
  </section>
</Layout>

<style>
  header {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

    @media ( width <= 768px){
      flex-direction: column;
      gap: 1rem;
    }

    & > h1 {
      font-size: 1.8rem;
      text-wrap: nowrap;
    }

    & > button {
      display: flex;
      align-items: center;
      gap:0.5rem;
      background-color: var(--color-naranja-oscuro);
      color: white;
      border: none;
      padding: 0.5rem 1rem;
      border-radius: 0.5rem;
      cursor: pointer;
      font-size: 1rem;
      transition: background-color 0.3s ease;

      &:hover {
        background-color: var(--color-naranja-claro);
      }

      & > span {
        color: var(--color-morado-oscuro);
        font-weight: bolder;
      }
    }
  }

  form {
    width: 100%;
    display: flex;
    flex-direction: row;
    gap: 1rem;;

    @media ( width <= 768px) {
      flex-direction: column;
    }

    & > input[type="text"] {
      width: 50%;

      @media( width <= 768px) {
        width: 100%;
      }
    }

    & > #categoria, #ubicacion {
      width: 25%;

      @media( width <= 768px) {
        width: 100%;
      }
    }

    & > button {
      display: flex;
      align-items: center;
      gap: 0.3rem;
      padding: 0.3rem 1rem;
      border: none;
      border-radius: 0.4rem;
      cursor:pointer;
      background-color: var(--color-naranja-oscuro);
      color: white;
      &:hover {
        background-color: var(--color-naranja-claro);
      }
    }
  }
</style>