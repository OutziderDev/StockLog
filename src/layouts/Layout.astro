<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  
  :root {
    --color-dark-light: #2f2f2f; 
    --color-morado-oscuro: #1c0e28;
    --color-morado-claro: #261636;
    --color-morado-hover: #2b1d3f;
    --color-naranja-claro: #e68429;/* FFA270; */
    --color-naranja-oscuro: #d56414; /* e48440 */
    --color-crema: #fff2e0;
  }

	body {
    background-color: var(--color-morado-oscuro);
    color: var(--color-crema);
    display: flex;
    min-height: 100dvh;
    position: relative;
	}

  main {
    flex: 1; 
  }

  /* Utilidades */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    margin: -1px;
    padding: 0;
    border: 0;
    clip: rect(0 0 0 0);
    overflow: hidden;
    white-space: nowrap;
  }

  .container{
    padding: 3rem;
    display: flex;
    flex-direction: column;
    gap: 2rem;

    @media (width <= 1024px){
      padding: 2rem;
    }
  }

  @keyframes fade-in {
    0% { opacity: 0;}
    100% { opacity:1;}
  }
</style>
